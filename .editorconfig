# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true

[*.{html,ect}]
indent_size = 4

[*.{css,scss}]
indent_size = 4

[*.ts]
quote_type = single
max_line_length = 100

[*.{md,adoc}]
max_line_length = off
trim_trailing_whitespace = false
